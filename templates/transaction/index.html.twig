{% extends 'base.html.twig' %}

{% block title %}Registre des Transactions{% endblock %}

{% block body %}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h2 class="h4 mb-1"><i class="mdi mdi-swap-horizontal"></i> Registre des Transactions</h2>
        <p class="text-muted mb-0">Toutes les opérations, y compris transferts.</p>
    </div>
    {% if isAdmin %}
    <form method="GET" class="d-flex gap-2 align-items-center">
        <label for="id_agence" class="mb-0 text-muted">Agence</label>
        <select name="id_agence" id="id_agence" class="form-select" style="width: 220px;" onchange="this.form.submit()">
            <option value="">Toutes</option>
            {% for agence in agences %}
                <option value="{{ agence.id }}" {% if filterAgence == agence.id %}selected{% endif %}>
                    {{ agence.nomAgence }}
                </option>
            {% endfor %}
        </select>
        <button type="submit" class="btn btn-primary btn-sm">
            <i class="mdi mdi-filter"></i> Filtrer
        </button>
    </form>
    {% endif %}
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0"><i class="mdi mdi-format-list-bulleted"></i> Historique des Transactions</h5>
        <a href="{{ path('app_transaction_new') }}" class="btn btn-light btn-sm">
            <i class="mdi mdi-plus"></i> Nouvelle Transaction
        </a>
    </div>
    <div class="card-body p-0">
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show m-3 mb-0" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="mdi mdi-barcode"></i> Réf.</th>
                        <th><i class="mdi mdi-calendar"></i> Date</th>
                        <th><i class="mdi mdi-account"></i> Client</th>
                        <th><i class="mdi mdi-tag"></i> Type</th>
                        <th class="text-end"><i class="mdi mdi-cash"></i> Montant</th>
                        <th><i class="mdi mdi-currency-usd"></i> Devise Entrée</th>
                        <th class="text-center"><i class="mdi mdi-chart-line"></i> Taux</th>
                        <th class="text-end"><i class="mdi mdi-calculator"></i> Contre-valeur</th>
                        <th><i class="mdi mdi-currency-usd"></i> Devise Sortie</th>
                        <th><i class="mdi mdi-office-building"></i> Agence</th>
                        <th><i class="mdi mdi-account-circle"></i> Utilisateur</th>
                        <th class="text-end"><i class="mdi mdi-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for transaction in transactions %}
                        {% set details = transaction.details %}
                        {% set montantTotal = 0 %}
                        {% set contreValeurTotal = 0 %}
                        {% set devisesEntree = [] %}
                        {% set devisesSortie = [] %}
                        {% set tauxList = [] %}
                        
                        {% for detail in details %}
                            {% set montantTotal = montantTotal + detail.montant %}
                            {% set contreValeurTotal = contreValeurTotal + detail.contreValeur %}
                            {% if detail.deviseInput and detail.deviseInput.sigle not in devisesEntree %}
                                {% set devisesEntree = devisesEntree|merge([detail.deviseInput.sigle]) %}
                            {% endif %}
                            {% if detail.deviseOutput and detail.deviseOutput.sigle not in devisesSortie %}
                                {% set devisesSortie = devisesSortie|merge([detail.deviseOutput.sigle]) %}
                            {% endif %}
                            {% if detail.taux and detail.taux not in tauxList %}
                                {% set tauxList = tauxList|merge([detail.taux]) %}
                            {% endif %}
                        {% endfor %}
                        
                        {% if montantTotal > 0 %}
                        <tr>
                            <td class="fw-bold text-primary">{{ transaction.reference }}</td>
                            <td>{{ transaction.dateTransaction|date('d/m/Y') }}</td>
                            <td>{{ transaction.nom }}</td>
                            <td>
                                <span class="badge {% if transaction.natureOperation == 'achat' %}bg-success{% elseif transaction.natureOperation == 'vente' %}bg-info{% else %}bg-secondary{% endif %}">
                                    {{ transaction.natureOperation|capitalize }}
                                </span>
                            </td>
                            <td class="text-end fw-bold">{{ montantTotal > 0 ? montantTotal|number_format(2, ',', ' ') : '-' }}</td>
                            <td>
                                {% if devisesEntree is not empty %}
                                    {% for devise in devisesEntree %}
                                        <span class="badge bg-primary me-1">{{ devise }}</span>
                                    {% endfor %}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if tauxList is not empty %}
                                    {{ tauxList|join(', ') }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td class="text-end fw-bold text-success">{{ contreValeurTotal > 0 ? contreValeurTotal|number_format(2, ',', ' ') : '-' }}</td>
                            <td>
                                {% if devisesSortie is not empty %}
                                    {% for devise in devisesSortie %}
                                        <span class="badge bg-warning text-dark me-1">{{ devise }}</span>
                                    {% endfor %}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ transaction.agence ? transaction.agence.nomAgence : '-' }}</td>
                            <td>{{ transaction.utilisateur ? transaction.utilisateur.nom : '-' }}</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" href="{{ path('app_transaction_show', {id: transaction.id}) }}" title="Voir">
                                    <i class="mdi mdi-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-success" href="{{ path('app_transaction_print', {id: transaction.id}) }}" target="_blank" title="Imprimer">
                                    <i class="mdi mdi-printer"></i>
                                </a>
                            </td>
                        </tr>
                        {% endif %}
                    {% else %}
                        <tr>
                            <td colspan="12" class="text-center text-muted py-4">
                                <i class="mdi mdi-database-outline" style="font-size: 2rem; opacity: 0.5;"></i>
                                <p class="mt-2">Aucune transaction enregistrée</p>
                                <a href="{{ path('app_transaction_new') }}" class="btn btn-sm btn-primary">
                                    Créer la première transaction
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table td, .table th {
        white-space: nowrap;
    }
    .badge {
        font-size: 0.75rem;
    }
</style>
{% endblock %}

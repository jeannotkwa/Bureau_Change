{% extends 'base.html.twig' %}

{% block title %}Rapports - {{ user_role|capitalize }}{% endblock %}

{% block body %}

{# Router intelligent: inclure le template approprié selon le rôle #}
{% if user_role == 'admin' %}
    {% include 'rapport/partials/admin_rapport.html.twig' %}
{% elseif user_role == 'responsable' %}
    {% include 'rapport/partials/responsable_rapport.html.twig' %}
{% elseif user_role == 'agent' %}
    {% include 'rapport/partials/agent_rapport.html.twig' %}
{% elseif user_role == 'caissier' %}
    {% include 'rapport/partials/caissier_rapport.html.twig' %}
{% else %}
    {% include 'rapport/partials/user_rapport.html.twig' %}
{% endif %}

{% endblock %}

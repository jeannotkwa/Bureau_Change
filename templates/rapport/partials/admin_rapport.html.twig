{# Performance par Agence #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">üè¢ Performance par Agence</h5>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Agence</th>
                                <th class="text-center">Transactions</th>
                                <th class="text-end">Achats (FC)</th>
                                <th class="text-end">Ventes (FC)</th>
                                <th class="text-end">Marge</th>
                                <th class="text-center">Performance</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for agence_nom, data in stats.transactions_par_agence %}
                                {% set marge = data.ventes - data.achats %}
                                <tr>
                                    <td><strong>{{ agence_nom }}</strong></td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">{{ data.count }}</span>
                                    </td>
                                    <td class="text-end text-success">{{ data.achats|number_format(0, ',', ' ') }}</td>
                                    <td class="text-end text-info">{{ data.ventes|number_format(0, ',', ' ') }}</td>
                                    <td class="text-end {% if marge >= 0 %}text-success{% else %}text-danger{% endif %}">
                                        {{ marge|number_format(0, ',', ' ') }}
                                    </td>
                                    <td class="text-center">
                                        {% set perf = data.achats + data.ventes %}
                                        {% if perf > 1000000 %}
                                            <span class="badge bg-success">Excellente</span>
                                        {% elseif perf > 500000 %}
                                            <span class="badge bg-info">Bonne</span>
                                        {% elseif perf > 100000 %}
                                            <span class="badge bg-warning">Moyenne</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Faible</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{# Soldes Globaux par Devise #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">üí∞ Soldes Globaux par Devise</h5>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Devise</th>
                                <th class="text-end">Solde</th>
                                <th class="text-end">√âquivalent FC</th>
                                <th class="text-center">Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for solde in soldes %}
                                <tr>
                                    <td>
                                        <strong>{{ solde.devise.libelle }}</strong>
                                        <small class="text-muted d-block">{{ solde.devise.code }}</small>
                                    </td>
                                    <td class="text-end">
                                        <span class="{% if solde.solde < 0 %}text-danger{% else %}text-success{% endif %}">
                                            {{ solde.solde|number_format(2, ',', ' ') }}
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        {{ (solde.solde * solde.devise.tauxAchat)|number_format(0, ',', ' ') }} FC
                                    </td>
                                    <td class="text-center">
                                        {% if solde.solde > 1000 %}
                                            <span class="badge bg-success">Excellent</span>
                                        {% elseif solde.solde > 0 %}
                                            <span class="badge bg-info">Normal</span>
                                        {% elseif solde.solde == 0 %}
                                            <span class="badge bg-warning">Vide</span>
                                        {% else %}
                                            <span class="badge bg-danger">N√©gatif</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{# Liste des Transactions #}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">üìã D√©tail des Transactions ({{ transactions|length }})</h5>
                <div class="table-responsive">
                    <table class="table table-hover table-sm align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>R√©f</th>
                                <th>Date</th>
                                <th>Agence</th>
                                <th>Nature</th>
                                <th>Client</th>
                                <th class="text-end">Montant (FC)</th>
                                <th>Agent</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for transaction in transactions|slice(0, 100) %}
                                <tr>
                                    <td><code>#{{ transaction.numeroReference }}</code></td>
                                    <td>{{ transaction.dateTransaction|date('d/m/Y H:i') }}</td>
                                    <td>{{ transaction.agence ? transaction.agence.nomAgence : 'N/A' }}</td>
                                    <td>
                                        {% if transaction.natureOperation == 'achat' %}
                                            <span class="badge bg-success-subtle text-success">Achat</span>
                                        {% else %}
                                            <span class="badge bg-info-subtle text-info">Vente</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ transaction.nomClient|default('N/A') }}</td>
                                    <td class="text-end">{{ transaction.montantTotal|number_format(0, ',', ' ') }}</td>
                                    <td>{{ transaction.utilisateur ? transaction.utilisateur.nom : 'N/A' }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% if transactions|length > 100 %}
                    <p class="text-muted text-center mt-3">
                        <i class="bx bx-info-circle"></i> Affichage limit√© √† 100 transactions. Utilisez les filtres pour affiner votre recherche.
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

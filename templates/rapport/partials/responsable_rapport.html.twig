{# Filtres de recherche #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">üîç Filtres de Recherche</h5>
                <form method="get" action="{{ path('app_rapport_index') }}" class="row g-3">
                    <div class="col-md-4">
                        <label for="date_debut" class="form-label">Date D√©but</label>
                        <input type="date" class="form-control" id="date_debut" name="date_debut" value="{{ date_debut }}">
                    </div>
                    <div class="col-md-4">
                        <label for="date_fin" class="form-label">Date Fin</label>
                        <input type="date" class="form-control" id="date_fin" name="date_fin" value="{{ date_fin }}">
                    </div>
                    <div class="col-md-4">
                        <label for="devise" class="form-label">Devise</label>
                        <select class="form-select" id="devise" name="devise">
                            <option value="">Toutes les devises</option>
                            {% for devise in devises %}
                                <option value="{{ devise.id }}" {% if devise_filter == devise.id %}selected{% endif %}>
                                    {{ devise.libelle }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="bx bx-filter-alt me-1"></i> Appliquer les Filtres
                        </button>
                        <a href="{{ path('app_rapport_index') }}" class="btn btn-secondary">
                            <i class="bx bx-reset me-1"></i> R√©initialiser
                        </a>
                        <button type="button" class="btn btn-success" onclick="window.print()">
                            <i class="bx bx-printer me-1"></i> Imprimer
                        </button>
                        <a href="{{ path('app_rapport_export_pdf', {date_debut: date_debut, date_fin: date_fin, devise: devise_filter}) }}" class="btn btn-danger">
                            <i class="bx bx-file-pdf me-1"></i> Export PDF
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


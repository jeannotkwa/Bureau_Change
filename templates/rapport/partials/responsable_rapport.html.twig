{# Performance par Agent - Section Principale pour Responsable #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">üë• Performance par Agent</h5>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Rang</th>
                                <th>Agent</th>
                                <th class="text-center">Transactions</th>
                                <th class="text-end">Achats (FC)</th>
                                <th class="text-end">Ventes (FC)</th>
                                <th class="text-end">Total Volume</th>
                                <th class="text-center">Performance</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set rank = 0 %}
                            {% for agent_nom, data in stats.stats_par_agent %}
                                {% set rank = rank + 1 %}
                                {% set total_volume = data.achats + data.ventes %}
                                <tr>
                                    <td>
                                        {% if rank == 1 %}
                                            <span class="badge bg-warning text-dark">ü•á #{{ rank }}</span>
                                        {% elseif rank == 2 %}
                                            <span class="badge bg-secondary">ü•à #{{ rank }}</span>
                                        {% elseif rank == 3 %}
                                            <span class="badge bg-danger">ü•â #{{ rank }}</span>
                                        {% else %}
                                            <span class="badge bg-light text-dark">#{{ rank }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <strong>{{ agent_nom }}</strong>
                                        {% if data.agent %}
                                            <small class="text-muted d-block">{{ data.agent.email }}</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">{{ data.count }}</span>
                                    </td>
                                    <td class="text-end text-success">{{ data.achats|number_format(0, ',', ' ') }}</td>
                                    <td class="text-end text-info">{{ data.ventes|number_format(0, ',', ' ') }}</td>
                                    <td class="text-end">
                                        <strong>{{ total_volume|number_format(0, ',', ' ') }}</strong>
                                    </td>
                                    <td class="text-center">
                                        {% if total_volume > 500000 %}
                                            <span class="badge bg-success">Excellente</span>
                                        {% elseif total_volume > 200000 %}
                                            <span class="badge bg-info">Tr√®s Bonne</span>
                                        {% elseif total_volume > 50000 %}
                                            <span class="badge bg-warning">Bonne</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Moyenne</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="2">TOTAL AGENCE</th>
                                <th class="text-center">{{ stats.total_transactions }}</th>
                                <th class="text-end text-success">{{ stats.total_achats|number_format(0, ',', ' ') }}</th>
                                <th class="text-end text-info">{{ stats.total_ventes|number_format(0, ',', ' ') }}</th>
                                <th class="text-end">
                                    <strong>{{ (stats.total_achats + stats.total_ventes)|number_format(0, ',', ' ') }}</strong>
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


{# Rapport Caissier - Vue Op√©rationnelle Ax√©e Soldes #}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">üìä Rapport Caisse - {{ user_agence ? user_agence.nomAgence : 'Sans agence' }}</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Tableau de Bord</a></li>
                    <li class="breadcrumb-item active">Rapports</li>
                </ol>
            </div>
        </div>
    </div>
</div>

{# S√©lection de p√©riode #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="get" action="{{ path('app_rapport_index') }}" class="row g-3">
                    <div class="col-md-5">
                        <label for="date_debut" class="form-label">D√©but</label>
                        <input type="date" class="form-control" id="date_debut" name="date_debut" value="{{ date_debut }}">
                    </div>
                    <div class="col-md-5">
                        <label for="date_fin" class="form-label">Fin</label>
                        <input type="date" class="form-control" id="date_fin" name="date_fin" value="{{ date_fin }}">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bx bx-search"></i> Rechercher
                        </button>
                    </div>
                    <div class="col-12 mt-2">
                        <a href="{{ path('app_rapport_export_pdf', {date_debut: date_debut, date_fin: date_fin}) }}" class="btn btn-danger">
                            <i class="bx bx-file-pdf me-1"></i> Export PDF
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{# Soldes - Section Prioritaire pour Caissier #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bx bx-wallet me-2"></i>üí∞ √âtat de la Caisse</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for solde in soldes %}
                        <div class="col-xl-3 col-md-4 col-sm-6 mb-3">
                            <div class="card {% if solde.solde < 0 %}bg-danger-subtle border-danger{% elseif solde.solde > 500 %}bg-success-subtle border-success{% elseif solde.solde > 0 %}bg-warning-subtle border-warning{% else %}bg-secondary-subtle{% endif %}">
                                <div class="card-body text-center">
                                    <h6 class="text-muted mb-1">{{ solde.devise.libelle }}</h6>
                                    <h2 class="mb-1 {% if solde.solde < 0 %}text-danger{% elseif solde.solde > 0 %}text-success{% else %}text-secondary{% endif %}">
                                        {{ solde.solde|number_format(2, ',', ' ') }}
                                    </h2>
                                    <small class="text-muted d-block">{{ solde.devise.code }}</small>
                                    <hr class="my-2">
                                    <div class="text-center">
                                        {% if solde.solde < 0 %}
                                            <span class="badge bg-danger">‚ö†Ô∏è N√âGATIF</span>
                                        {% elseif solde.solde == 0 %}
                                            <span class="badge bg-secondary">VIDE</span>
                                        {% elseif solde.solde < 100 %}
                                            <span class="badge bg-warning">FAIBLE</span>
                                        {% elseif solde.solde < 500 %}
                                            <span class="badge bg-info">NORMAL</span>
                                        {% else %}
                                            <span class="badge bg-success">BON</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>


{# R√©partition par Devise #}
<div class="row mb-4">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">üíµ Achats par Devise</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>Devise</th>
                                <th class="text-end">Montant (FC)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for devise, montant in stats.achats_par_devise %}
                                <tr>
                                    <td><strong>{{ devise }}</strong></td>
                                    <td class="text-end text-success">{{ montant|number_format(0, ',', ' ') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center text-muted">Aucun achat</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">üíµ Ventes par Devise</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>Devise</th>
                                <th class="text-end">Montant (FC)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for devise, montant in stats.ventes_par_devise %}
                                <tr>
                                    <td><strong>{{ devise }}</strong></td>
                                    <td class="text-end text-info">{{ montant|number_format(0, ',', ' ') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center text-muted">Aucune vente</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{# Liste des Transactions #}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">üìã Transactions ({{ transactions|length }})</h5>
                <div class="table-responsive">
                    <table class="table table-hover table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>R√©f</th>
                                <th>Date</th>
                                <th>Nature</th>
                                <th>Client</th>
                                <th class="text-end">Montant (FC)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for transaction in transactions %}
                                <tr>
                                    <td><code>#{{ transaction.numeroReference }}</code></td>
                                    <td>{{ transaction.dateTransaction|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {% if transaction.natureOperation == 'achat' %}
                                            <span class="badge bg-success">Achat</span>
                                        {% else %}
                                            <span class="badge bg-info">Vente</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ transaction.nomClient|default('N/A') }}</td>
                                    <td class="text-end">{{ transaction.montantTotal|number_format(0, ',', ' ') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-3">Aucune transaction</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{% extends 'base.html.twig' %}

{% block title %}Affectations des Agents{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="m-0">
                        <i class="mdi mdi-account-multiple"></i> Affectations des Agents
                    </h5>
                </div>
                <div class="card-body p-4">
                    {% if agentsAvecAffectation|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="mdi mdi-account"></i> Nom de l'Agent</th>
                                        <th><i class="mdi mdi-email"></i> Email</th>
                                        <th><i class="mdi mdi-office-building"></i> Agence Actuelle</th>
                                        <th><i class="mdi mdi-calendar"></i> Date Affectation</th>
                                        <th class="text-end"><i class="mdi mdi-cog"></i> Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in agentsAvecAffectation %}
                                        <tr>
                                            <td>
                                                <strong>{{ item.agent.nom }}</strong>
                                            </td>
                                            <td>{{ item.agent.email }}</td>
                                            <td>
                                                {% if item.affectation %}
                                                    <span class="badge bg-success">
                                                        {{ item.affectation.agence.nomAgence }}
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-warning">Pas d'affectation</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if item.affectation %}
                                                    {{ item.affectation.dateDebut|date('d/m/Y') }}
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('app_affectation_agent_transferer', {id: item.agent.id}) }}" 
                                                   class="btn btn-sm btn-primary" title="Transférer">
                                                    <i class="mdi mdi-transfer"></i> Transférer
                                                </a>
                                                <a href="{{ path('app_affectation_agent_historique', {id: item.agent.id}) }}" 
                                                   class="btn btn-sm btn-info" title="Historique">
                                                    <i class="mdi mdi-history"></i> Historique
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="mdi mdi-information"></i> Aucun agent actif trouvé.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

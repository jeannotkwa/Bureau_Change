{% extends 'base.html.twig' %}

{% block title %}Historique - {{ utilisateur.nom }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="m-0">
                        <i class="mdi mdi-history"></i> Historique des Affectations - {{ utilisateur.nom }}
                    </h5>
                </div>
                <div class="card-body p-4">
                    {% if historique|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="mdi mdi-office-building"></i> Agence</th>
                                        <th><i class="mdi mdi-calendar"></i> Date Début</th>
                                        <th><i class="mdi mdi-calendar"></i> Date Fin</th>
                                        <th><i class="mdi mdi-information"></i> Durée</th>
                                        <th class="text-center"><i class="mdi mdi-check-circle"></i> Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for affectation in historique %}
                                        <tr>
                                            <td>
                                                <strong>{{ affectation.agence.nomAgence }}</strong>
                                            </td>
                                            <td>{{ affectation.dateDebut|date('d/m/Y') }}</td>
                                            <td>
                                                {% if affectation.dateFin %}
                                                    {{ affectation.dateFin|date('d/m/Y') }}
                                                {% else %}
                                                    <span class="badge bg-success">En cours</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if affectation.dateFin %}
                                                    {% set debut = affectation.dateDebut %}
                                                    {% set fin = affectation.dateFin %}
                                                    {% set diff = fin.diff(debut).days %}
                                                    {{ diff }} jour(s)
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                {% if affectation.statut == 'actif' and not affectation.dateFin %}
                                                    <span class="badge bg-success">✅ Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="mdi mdi-information"></i> Aucun historique d'affectation trouvé.
                        </div>
                    {% endif %}

                    <div class="mt-3">
                        <a href="{{ path('app_affectation_agent_index') }}" class="btn btn-outline-secondary">
                            <i class="mdi mdi-arrow-left"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Agents - {{ agence.nomAgence }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="m-0">
                        <i class="mdi mdi-office-building"></i> {{ agence.nomAgence }} - Agents Actuels
                    </h5>
                </div>
                <div class="card-body p-4">
                    {% if agents|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="mdi mdi-account"></i> Nom</th>
                                        <th><i class="mdi mdi-email"></i> Email</th>
                                        <th><i class="mdi mdi-calendar"></i> Depuis le</th>
                                        <th class="text-end"><i class="mdi mdi-cog"></i> Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for affectation in agents %}
                                        <tr>
                                            <td>
                                                <strong>{{ affectation.utilisateur.nom }}</strong>
                                            </td>
                                            <td>{{ affectation.utilisateur.email }}</td>
                                            <td>{{ affectation.dateDebut|date('d/m/Y') }}</td>
                                            <td class="text-end">
                                                <a href="{{ path('app_affectation_agent_historique', {id: affectation.utilisateur.id}) }}" 
                                                   class="btn btn-sm btn-info">
                                                    <i class="mdi mdi-history"></i> Historique
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="mdi mdi-information"></i> Aucun agent actuellement affecté à cette agence.
                        </div>
                    {% endif %}
                </div>
            </div>

            {% if historique|length > 0 %}
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-secondary text-white py-3">
                        <h5 class="m-0">
                            <i class="mdi mdi-history"></i> Historique Complet des Affectations
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="mdi mdi-account"></i> Agent</th>
                                        <th><i class="mdi mdi-calendar"></i> Date Début</th>
                                        <th><i class="mdi mdi-calendar"></i> Date Fin</th>
                                        <th class="text-center"><i class="mdi mdi-check-circle"></i> Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for affectation in historique %}
                                        <tr>
                                            <td>
                                                <strong>{{ affectation.utilisateur.nom }}</strong>
                                            </td>
                                            <td>{{ affectation.dateDebut|date('d/m/Y') }}</td>
                                            <td>
                                                {% if affectation.dateFin %}
                                                    {{ affectation.dateFin|date('d/m/Y') }}
                                                {% else %}
                                                    <span class="badge bg-success">En cours</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                {% if affectation.statut == 'actif' and not affectation.dateFin %}
                                                    <span class="badge bg-success">✅ Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="mt-3">
                <a href="{{ path('app_affectation_agent_index') }}" class="btn btn-outline-secondary">
                    <i class="mdi mdi-arrow-left"></i> Retour
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

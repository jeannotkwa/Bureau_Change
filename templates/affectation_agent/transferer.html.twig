{% extends 'base.html.twig' %}

{% block title %}Transférer {{ utilisateur.nom }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="m-0">
                        <i class="mdi mdi-transfer"></i> Transférer {{ utilisateur.nom }}
                    </h5>
                </div>
                <div class="card-body p-4">
                    
                    {% if affectationActuelle %}
                        <div class="alert alert-info mb-4">
                            <strong><i class="mdi mdi-information"></i> Affectation Actuelle :</strong><br>
                            Agence : <strong>{{ affectationActuelle.agence.nomAgence }}</strong><br>
                            Depuis le : <strong>{{ affectationActuelle.dateDebut|date('d/m/Y') }}</strong>
                        </div>
                    {% else %}
                        <div class="alert alert-warning mb-4">
                            <i class="mdi mdi-alert"></i> <strong>Aucune affectation actuelle</strong>
                        </div>
                    {% endif %}

                    <form method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="mdi mdi-office-building"></i> Nouvelle Agence <span class="text-danger">*</span>
                            </label>
                            <select name="agence_id" class="form-control" required>
                                <option value="">-- Sélectionner une agence --</option>
                                {% for agence in agences %}
                                    <option value="{{ agence.id }}">{{ agence.nomAgence }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="mdi mdi-calendar"></i> Date de Transfert <span class="text-danger">*</span>
                            </label>
                            <input type="date" name="date_debut" class="form-control" 
                                   max="{{ 'now'|date('Y-m-d') }}" required>
                        </div>

                        <div class="d-flex gap-2 justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="mdi mdi-check-circle"></i> Valider le Transfert
                            </button>
                            <a href="{{ path('app_affectation_agent_index') }}" class="btn btn-outline-secondary">
                                <i class="mdi mdi-arrow-left"></i> Retour
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white py-3">
                    <h5 class="m-0">
                        <i class="mdi mdi-history"></i> Historique des Affectations
                    </h5>
                </div>
                <div class="card-body p-4">
                    {% if historique|length > 0 %}
                        <div class="timeline">
                            {% for affectation in historique %}
                                <div class="timeline-item mb-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            {% if affectation.statut == 'actif' %}
                                                <span class="badge bg-success rounded-circle" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="mdi mdi-check"></i>
                                                </span>
                                            {% else %}
                                                <span class="badge bg-secondary rounded-circle" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="mdi mdi-close"></i>
                                                </span>
                                            {% endif %}
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">{{ affectation.agence.nomAgence }}</h6>
                                            <small class="text-muted">
                                                Du {{ affectation.dateDebut|date('d/m/Y') }}
                                                {% if affectation.dateFin %}
                                                    au {{ affectation.dateFin|date('d/m/Y') }}
                                                {% else %}
                                                    <span class="badge bg-success">En cours</span>
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">Aucun historique disponible</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Soldes des Fonds par Agence{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">
                <i class="mdi mdi-bank"></i> Soldes des Fonds par Agence
            </h4>
            <div class="page-title-right">
                <a href="{{ path('app_fonds_new') }}" class="btn btn-primary">
                    <i class="mdi mdi-plus-circle"></i> Ravitailler Fonds
                </a>
            </div>
        </div>
    </div>
</div>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<!-- Statistiques Globales -->
{% if statsGlobales is not empty %}
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm bg-gradient-primary">
            <div class="card-body">
                <h5 class="text-white mb-3">
                    <i class="mdi mdi-chart-line"></i> Statistiques Globales - Cumul Total des Fonds
                </h5>
                <div class="row">
                    {% for sigle, stat in statsGlobales %}
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card bg-white border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="avatar-sm mx-auto mb-2">
                                        <span class="avatar-title rounded-circle bg-primary bg-soft text-primary font-size-24">
                                            <i class="mdi mdi-cash-multiple"></i>
                                        </span>
                                    </div>
                                    <h6 class="text-muted text-uppercase mb-1">{{ sigle }}</h6>
                                    <h4 class="mb-0 text-primary fw-bold">
                                        {{ stat.total|number_format(2, ',', ' ') }}
                                    </h4>
                                    <small class="text-muted">{{ stat.libelle }}</small>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<!-- Carte récapitulative -->
<div class="row mb-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="avatar-sm">
                            <span class="avatar-title rounded-circle bg-primary bg-soft text-primary font-size-18">
                                <i class="mdi mdi-information"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <p class="text-muted mb-0">
                            Cette page affiche le <strong>cumul actuel des soldes</strong> pour chaque agence.
                            Cliquez sur <strong>"Voir l'historique"</strong> pour consulter les mouvements de fonds détaillés par date.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Liste des agences avec soldes -->
{% if agencesData is not empty %}
    {% for data in agencesData %}
    <div class="card mb-3 border-left-primary shadow-sm">
        <div class="card-header bg-light">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">
                        <i class="mdi mdi-office-building text-primary"></i> 
                        {{ data.agence.nomAgence }}
                    </h5>
                    <small class="text-muted">Code: {{ data.agence.codeAgence ?? 'N/A' }}</small>
                </div>
                <div class="col-auto">
                    <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#historyModal{{ data.agence.id }}">
                        <i class="mdi mdi-history"></i> Voir l'historique ({{ data.historique|length }})
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <h6 class="text-uppercase text-muted mb-3">
                        <i class="mdi mdi-cash-multiple"></i> Soldes Actuels des Devises
                    </h6>
                </div>
            </div>
            
            {% if data.soldes is not empty %}
                <div class="row">
                    {% for devise in devises %}
                        {% if data.soldes[devise.id] is defined and data.soldes[devise.id] != 0 %}
                            <div class="col-md-3 col-sm-6 mb-3">
                                <div class="card border border-{{ data.soldes[devise.id] > 0 ? 'success' : 'danger' }}">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted mb-2">{{ devise.libelle }}</h6>
                                        <h4 class="mb-0 text-{{ data.soldes[devise.id] > 0 ? 'success' : 'danger' }}">
                                            <strong>{{ data.soldes[devise.id]|number_format(2, ',', ' ') }}</strong>
                                        </h4>
                                        <span class="badge bg-{{ data.soldes[devise.id] > 0 ? 'success' : 'danger' }} mt-2">{{ devise.sigle }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-warning text-center">
                    <i class="mdi mdi-alert"></i> Aucun solde disponible pour cette agence
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Modal Historique pour cette agence -->
    <div class="modal fade" id="historyModal{{ data.agence.id }}" tabindex="-1" aria-labelledby="historyModalLabel{{ data.agence.id }}" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="historyModalLabel{{ data.agence.id }}">
                        <i class="mdi mdi-history"></i> Historique des Mouvements - {{ data.agence.nomAgence }}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {% if data.historique is not empty %}
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 15%">
                                            <i class="mdi mdi-calendar"></i> Date
                                        </th>
                                        <th style="width: 10%">
                                            <i class="mdi mdi-tag"></i> Type
                                        </th>
                                        <th style="width: 10%">
                                            <i class="mdi mdi-check-circle"></i> Statut
                                        </th>
                                        {% for devise in devises %}
                                            <th class="text-center" style="width: 10%">
                                                {{ devise.sigle }}
                                            </th>
                                        {% endfor %}
                                        <th class="text-center" style="width: 10%">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for fond in data.historique %}
                                        <tr>
                                            <td>
                                                <strong>{{ fond.dateJour|date('d/m/Y') }}</strong>
                                                <br><small class="text-muted">{{ fond.dateJour|date('H:i') }}</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    {{ fond.type ?? 'Ravitaillement' }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if fond.statut == 'Actif' %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% elseif fond.statut == 'Inactif' %}
                                                    <span class="badge bg-danger">Inactif</span>
                                                {% else %}
                                                    <span class="badge bg-warning">{{ fond.statut }}</span>
                                                {% endif %}
                                            </td>
                                            {% for devise in devises %}
                                                <td class="text-end">
                                                    {% set montant = 0 %}
                                                    {% for detail in fond.details %}
                                                        {% if detail.devise.id == devise.id %}
                                                            {% set montant = detail.montant %}
                                                        {% endif %}
                                                    {% endfor %}
                                                    {% if montant > 0 %}
                                                        <span class="badge bg-success">
                                                            {{ montant|number_format(2, ',', ' ') }}
                                                        </span>
                                                    {% else %}
                                                        <span class="text-muted">-</span>
                                                    {% endif %}
                                                </td>
                                            {% endfor %}
                                            <td class="text-center">
                                                <a href="{{ path('app_fonds_show', {'id': fond.id}) }}" 
                                                   class="btn btn-sm btn-outline-info" 
                                                   title="Voir détails">
                                                    <i class="mdi mdi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info text-center">
                            <i class="mdi mdi-information"></i> Aucun mouvement de fonds pour cette agence
                        </div>
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="mdi mdi-close"></i> Fermer
                    </button>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% else %}
    <div class="card">
        <div class="card-body">
            <div class="alert alert-warning text-center mb-0">
                <i class="mdi mdi-alert-circle"></i> Aucune agence disponible
            </div>
        </div>
    </div>
{% endif %}

{% endblock %}

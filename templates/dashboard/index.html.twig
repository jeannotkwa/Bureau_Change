{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Tableau de Bord</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Tableau de Bord</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Statistiques du jour -->
<div class="row">
    <div class="col-xl-4">
        <div class="card mini-stat bg-primary text-white">
            <div class="card-body">
                <div class="mb-4">
                    <div class="float-start mini-stat-img me-4">
                        <i class="bx bx-transfer font-size-24"></i>
                    </div>
                    <h5 class="font-size-16 text-uppercase text-white-50">Transactions Aujourd'hui</h5>
                    <h4 class="fw-medium font-size-24">{{ stats.transactions_today }}</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card mini-stat bg-primary text-white">
            <div class="card-body">
                <div class="mb-4">
                    <div class="float-start mini-stat-img me-4">
                        <i class="bx bx-money font-size-24"></i>
                    </div>
                    <h5 class="font-size-16 text-uppercase text-white-50">Total Achats (CDF)</h5>
                    <h4 class="fw-medium font-size-24">{{ stats.total_achats|number_format(2, ',', ' ') }}</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card mini-stat bg-primary text-white">
            <div class="card-body">
                <div class="mb-4">
                    <div class="float-start mini-stat-img me-4">
                        <i class="bx bx-dollar-circle font-size-24"></i>
                    </div>
                    <h5 class="font-size-16 text-uppercase text-white-50">Total Ventes (CDF)</h5>
                    <h4 class="fw-medium font-size-24">{{ stats.total_ventes|number_format(2, ',', ' ') }}</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Soldes des devises -->
<div class="row">
    <div class="col-xl-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Soldes des Devises</h4>
                <div class="table-responsive">
                    <table class="table table-centered mb-0 align-middle table-hover table-nowrap">
                        <thead class="table-light">
                            <tr>
                                <th>Devise</th>
                                <th>Sigle</th>
                                <th class="text-end">Solde Disponible</th>
                                <th>Taux Achat</th>
                                <th>Taux Vente</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for solde in soldes %}
                            <tr>
                                {% if solde is iterable and solde.libelle is defined %}
                                    <td>{{ solde.libelle }}</td>
                                    <td><span class="badge bg-primary">{{ solde.sigle }}</span></td>
                                    {# Certaines requêtes renvoient 'solde' au lieu de 'montant' #}
                                    {% set montantAffiche = solde.montant is defined ? solde.montant : (solde.solde is defined ? solde.solde : 0) %}
                                    <td class="text-end"><strong>{{ montantAffiche|number_format(2, ',', ' ') }}</strong></td>
                                    <td>{{ solde.tauxAchat|number_format(4, ',', ' ') }}</td>
                                    <td>{{ solde.tauxVente|number_format(4, ',', ' ') }}</td>
                                {% elseif solde.devise is defined %}
                                    <td>{{ solde.devise.libelle }}</td>
                                    <td><span class="badge bg-primary">{{ solde.devise.sigle }}</span></td>
                                    {% set montantAffiche = solde.montant is defined ? solde.montant : (solde.solde is defined ? solde.solde : 0) %}
                                    <td class="text-end"><strong>{{ montantAffiche|number_format(2, ',', ' ') }}</strong></td>
                                    <td>{{ solde.devise.tauxAchat|number_format(4, ',', ' ') }}</td>
                                    <td>{{ solde.devise.tauxVente|number_format(4, ',', ' ') }}</td>
                                {% else %}
                                    <td colspan="5" class="text-center">Format invalide</td>
                                {% endif %}
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucun solde disponible</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Devises Actives</h4>
                <div class="list-group">
                    {% for devise in devises %}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">{{ devise.sigle }}</h6>
                                <small class="text-muted">{{ devise.libelle }}</small>
                            </div>
                            <span class="badge bg-success">Actif</span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Transactions récentes -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Transactions Récentes</h4>
                <div class="table-responsive">
                    <table class="table table-centered mb-0 align-middle table-hover table-nowrap">
                        <thead class="table-light">
                            <tr>
                                <th>Référence</th>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Nature</th>
                                <th>Montant</th>
                                <th>Agent</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for transaction in recent_transactions %}
                            <tr>
                                <td><a href="#" class="text-body fw-bold">{{ transaction.reference }}</a></td>
                                <td>{{ transaction.dateTransaction|date('d/m/Y') }}</td>
                                <td>{{ transaction.nom }}</td>
                                <td>
                                    {% if transaction.natureOperation == 'achat' %}
                                        <span class="badge bg-success">Achat</span>
                                    {% else %}
                                        <span class="badge bg-info">Vente</span>
                                    {% endif %}
                                </td>
                                <td>{{ transaction.montantTotal|number_format(2, ',', ' ') }} CDF</td>
                                <td>{{ transaction.utilisateur.nom }}</td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm">
                                        <i class="bx bx-show-alt"></i>
                                    </a>
                                    <a href="#" class="btn btn-success btn-sm">
                                        <i class="bx bx-printer"></i>
                                    </a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucune transaction récente</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    // Initialiser les icônes Feather
    feather.replace();
</script>
{% endblock %}

<!-- Caissier Dashboard - Vue Focus sur Soldes et Transactions -->

<!-- Info Caissier -->
<div class="alert alert-info alert-dismissible fade show" role="alert">
    <i class="bx bxs-info-circle me-2"></i>
    <strong>Bienvenue {{ user_name }}</strong> - Vue Caissier de l'agence <strong>{{ user_agence.nomAgence }}</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<!-- Statistiques Caissier -->
<div class="row">
    <div class="col-xl-4">
        <div class="card mini-stat bg-primary text-white">
            <div class="card-body">
                <div class="mb-4">
                    <div class="float-start mini-stat-img me-4">
                        <i class="bx bx-transfer font-size-24"></i>
                    </div>
                    <h5 class="font-size-16 text-uppercase text-white-50">Transactions Aujourd'hui</h5>
                    <h4 class="fw-medium font-size-24">{{ stats.total_transactions }}</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card mini-stat bg-success text-white">
            <div class="card-body">
                <div class="mb-4">
                    <div class="float-start mini-stat-img me-4">
                        <i class="bx bx-money font-size-24"></i>
                    </div>
                    <h5 class="font-size-16 text-uppercase text-white-50">Total Achats</h5>
                    <h4 class="fw-medium font-size-24">{{ stats.total_achats|number_format(0, ',', ' ') }} CDF</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card mini-stat bg-info text-white">
            <div class="card-body">
                <div class="mb-4">
                    <div class="float-start mini-stat-img me-4">
                        <i class="bx bx-dollar-circle font-size-24"></i>
                    </div>
                    <h5 class="font-size-16 text-uppercase text-white-50">Total Ventes</h5>
                    <h4 class="fw-medium font-size-24">{{ stats.total_ventes|number_format(0, ',', ' ') }} CDF</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Soldes Détaillés - PRIORITAIRE POUR CAISSIER -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-success">
            <div class="card-header bg-light">
                <h4 class="card-title mb-0">
                    <i class="bx bx-wallet text-success me-2"></i>
                    <strong>Soldes en Caisse - TRÈS IMPORTANT</strong>
                </h4>
            </div>
            <div class="card-body">
                {% if soldes|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-bordered mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Devise</th>
                                <th>Sigle</th>
                                <th class="text-end">Solde Disponible</th>
                                <th>Taux Achat</th>
                                <th>Taux Vente</th>
                                <th class="text-center">Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for solde in soldes %}
                            <tr>
                                {% if solde is iterable and solde.libelle is defined %}
                                    <td><strong>{{ solde.libelle }}</strong></td>
                                    <td><span class="badge bg-primary">{{ solde.sigle }}</span></td>
                                    {% set montantAffiche = solde.montant is defined ? solde.montant : (solde.solde is defined ? solde.solde : 0) %}
                                    <td class="text-end">
                                        <strong class="{% if montantAffiche > 0 %}text-success{% else %}text-danger{% endif %}">
                                            {{ montantAffiche|number_format(2, ',', ' ') }}
                                        </strong>
                                    </td>
                                    <td>{{ solde.tauxAchat|number_format(4, ',', ' ') }}</td>
                                    <td>{{ solde.tauxVente|number_format(4, ',', ' ') }}</td>
                                    <td class="text-center">
                                        {% if montantAffiche > 0 %}
                                            <span class="badge bg-success">Disponible</span>
                                        {% else %}
                                            <span class="badge bg-danger">À Provisionner</span>
                                        {% endif %}
                                    </td>
                                {% elseif solde.devise is defined %}
                                    <td><strong>{{ solde.devise.libelle }}</strong></td>
                                    <td><span class="badge bg-primary">{{ solde.devise.sigle }}</span></td>
                                    {% set montantAffiche = solde.montant is defined ? solde.montant : (solde.solde is defined ? solde.solde : 0) %}
                                    <td class="text-end">
                                        <strong class="{% if montantAffiche > 0 %}text-success{% else %}text-danger{% endif %}">
                                            {{ montantAffiche|number_format(2, ',', ' ') }}
                                        </strong>
                                    </td>
                                    <td>{{ solde.devise.tauxAchat|number_format(4, ',', ' ') }}</td>
                                    <td>{{ solde.devise.tauxVente|number_format(4, ',', ' ') }}</td>
                                    <td class="text-center">
                                        {% if montantAffiche > 0 %}
                                            <span class="badge bg-success">Disponible</span>
                                        {% else %}
                                            <span class="badge bg-danger">À Provisionner</span>
                                        {% endif %}
                                    </td>
                                {% else %}
                                    <td colspan="6" class="text-center text-muted">Format invalide</td>
                                {% endif %}
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="alert alert-warning">
                    <i class="bx bx-warning me-2"></i> Aucun solde disponible
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Achats et Ventes par Devise -->
<div class="row mt-4">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    <i class="bx bx-money me-2"></i> Achats par Devise
                </h4>
                {% if stats.achats_par_devise|length > 0 %}
                <div class="list-group">
                    {% for devise, montant in stats.achats_par_devise %}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">{{ devise }}</h6>
                                <small class="text-muted">Montant acheté</small>
                            </div>
                            <span class="badge bg-success badge-lg">
                                {{ montant|number_format(0, ',', ' ') }}
                            </span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="alert alert-info">Aucun achat enregistré</div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    <i class="bx bx-dollar-circle me-2"></i> Ventes par Devise
                </h4>
                {% if stats.ventes_par_devise|length > 0 %}
                <div class="list-group">
                    {% for devise, montant in stats.ventes_par_devise %}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">{{ devise }}</h6>
                                <small class="text-muted">Montant vendu</small>
                            </div>
                            <span class="badge bg-primary badge-lg">
                                {{ montant|number_format(0, ',', ' ') }}
                            </span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="alert alert-info">Aucune vente enregistrée</div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Transactions Récentes -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    <i class="bx bx-transfer me-2"></i> Transactions Récentes
                </h4>
                <div class="table-responsive">
                    <table class="table table-centered mb-0 align-middle table-hover table-nowrap">
                        <thead class="table-light">
                            <tr>
                                <th>Référence</th>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Nature</th>
                                <th class="text-end">Montant</th>
                                <th>Agent</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for transaction in recent_transactions %}
                            <tr>
                                <td><a href="#" class="text-body fw-bold">{{ transaction.reference }}</a></td>
                                <td>{{ transaction.dateTransaction|date('d/m/Y H:i') }}</td>
                                <td>{{ transaction.nom }}</td>
                                <td>
                                    {% if transaction.natureOperation == 'achat' %}
                                        <span class="badge bg-success">Achat</span>
                                    {% elseif transaction.natureOperation == 'vente' %}
                                        <span class="badge bg-info">Vente</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ transaction.natureOperation|capitalize }}</span>
                                    {% endif %}
                                </td>
                                <td class="text-end"><strong>{{ transaction.montantTotal|number_format(2, ',', ' ') }} CDF</strong></td>
                                <td>{{ transaction.utilisateur.nom }}</td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm" title="Voir">
                                        <i class="bx bx-show-alt"></i>
                                    </a>
                                    <a href="#" class="btn btn-success btn-sm" title="Imprimer">
                                        <i class="bx bx-printer"></i>
                                    </a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">Aucune transaction récente</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

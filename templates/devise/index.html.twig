{% extends 'base.html.twig' %}

{% block title %}Gestion des Devises{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="m-0"><i class="mdi mdi-currency-usd"></i> Registre des Devises</h5>
                <a href="{{ path('app_devise_new') }}" class="btn btn-light btn-sm">
                    <i class="mdi mdi-plus"></i> Ajouter une devise
                </a>
            </div>
            <div class="card-body p-0">
                
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show m-3 mb-0" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="mdi mdi-currency-sign"></i> Sigle</th>
                                <th><i class="mdi mdi-text"></i> Intitulé</th>
                                <th class="text-end"><i class="mdi mdi-arrow-bottom"></i> Taux Achat</th>
                                <th class="text-end"><i class="mdi mdi-arrow-top"></i> Taux Vente</th>
                                <th class="text-center"><i class="mdi mdi-check-circle"></i> Statut</th>
                                <th class="text-end"><i class="mdi mdi-cog"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for devise in devises %}
                                <tr>
                                    <td>
                                        <span class="badge bg-primary" style="font-size: 0.85rem;">{{ devise.sigle }}</span>
                                    </td>
                                    <td>{{ devise.libelle }}</td>
                                    <td class="text-end fw-bold text-success">{{ devise.tauxAchat|number_format(4, ',', ' ') }}</td>
                                    <td class="text-end fw-bold text-danger">{{ devise.tauxVente|number_format(4, ',', ' ') }}</td>
                                    <td class="text-center">
                                        {% if devise.statut == 'Actif' %}
                                            <span class="badge bg-success">✅ Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-warning" href="{{ path('app_devise_edit', {id: devise.id}) }}" title="Modifier">
                                            <i class="mdi mdi-pencil"></i> Modifier
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="mdi mdi-database-outline" style="font-size: 2rem; opacity: 0.5;"></i>
                                        <p class="mt-2">Aucune devise enregistrée</p>
                                        <a href="{{ path('app_devise_new') }}" class="btn btn-sm btn-primary">
                                            Créer la première devise
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

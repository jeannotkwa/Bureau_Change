                        <legend class="fs-6 fw-bold text-primary border-bottom pb-2 mb-3">
                            üìù D√©tails de l'Op√©ration
                        </legend>

                        <div class="mb-3">
                            <label class="form-label">
                                üéØ Motif <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" name="motif" 
                                   placeholder="Motif de l'op\u00e9ration" value="{{ form_data.motif|default('') }}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                üë® B√©n√©ficiaire <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" name="beneficiaire" 
                                   placeholder="Nom du b\u00e9n\u00e9ficiaire" value="{{ form_data.beneficiaire|default('') }}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                ü™™ Num√©ro de Pi√®ce
                            </label>
                            <input type="text" class="form-control" name="numero_piece" 
                                   placeholder="Ex: 123456789" value="{{ form_data.numero_piece|default('') }}">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                üìÑ Document (JPG, PNG, PDF)
                            </label>
                            <input type="file" class="form-control" name="image_document" 
                                   accept=".jpg,.jpeg,.png,.pdf">
                            <small class="text-muted d-block mt-1">
                                Taille maximale : 5 Mo
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                üí¨ Commentaire
                            </label>
                            <textarea class="form-control" name="commentaire" rows="3" 
                                      placeholder="Ajoutez un commentaire (optionnel)">{{ form_data.commentaire|default('') }}</textarea>
                        </div>
                    </fieldset>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 justify-content-between mt-4">
                        <div>
                            <button type="submit" class="btn btn-success">
                                <i class="mdi mdi-check-circle"></i> Enregistrer l'Op√©ration
                            </button>
                            <button type="reset" class="btn btn-secondary">
                                <i class="mdi mdi-refresh"></i> R√©initialiser
                            </button>
                        </div>
                        <a href="{{ path('app_operation_diverse_index') }}" class="btn btn-outline-secondary">
                            <i class="mdi mdi-arrow-left"></i> Retour
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

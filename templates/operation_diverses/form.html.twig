                        <strong>‚ö†Ô∏è Erreurs d√©tect√©es :</strong>
                        <ul class="mb-0 mt-2">
                            {% for error in errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endif %}

                <form method="POST" action="{{ path('app_operation_diverse_new') }}" enctype="multipart/form-data" id="operationForm">
                    
                    <!-- Section: Informations G√©n√©rales -->
                    <fieldset class="mb-4">
                        <legend class="fs-6 fw-bold text-primary border-bottom pb-2 mb-3">
                            üìã Informations G√©n√©rales
                        </legend>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    üìÖ Date <span class="text-danger">*</span>
                                </label>
                                <input type="date" class="form-control" name="date" max="{{ 'now'|date('Y-m-d') }}" 
                                       value="{{ form_data.date|default('') }}" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    üí≤ Montant <span class="text-danger">*</span>
                                </label>
                                <input type="number" step="0.01" class="form-control" name="montant" 
                                       placeholder="0.00" value="{{ form_data.montant|default('') }}" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    üí± Devise <span class="text-danger">*</span>
                                </label>
                                <select name="devise" class="form-select" required>

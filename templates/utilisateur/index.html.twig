{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="page-title-box d-sm-flex align-items-center justify-content-between">
    <h4 class="mb-sm-0">Utilisateurs</h4>
    <div class="page-title-right">
        <a href="{{ path('app_utilisateur_new') }}" class="btn btn-primary"><i class="mdi mdi-plus"></i> Nouvel utilisateur</a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="mdi mdi-account-multiple"></i> Liste des utilisateurs</h5>
    </div>
    <div class="card-body">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th><i class="mdi mdi-account"></i> Nom</th>
                        <th><i class="mdi mdi-email"></i> Email</th>
                        <th><i class="mdi mdi-account-key"></i> RÃ´le</th>
                        <th><i class="mdi mdi-check-circle"></i> Statut</th>
                        <th class="text-end"><i class="mdi mdi-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for utilisateur in utilisateurs %}
                        <tr class="align-middle">
                            <td class="fw-bold text-primary">{{ utilisateur.nom }}</td>
                            <td>{{ utilisateur.email }}</td>
                            <td>{{ utilisateur.roles|join(', ') }}</td>
                            <td>{{ utilisateur.agence ? utilisateur.agence.nomAgence : '-' }}</td>
                            <td><span class="badge rounded-pill bg-{{ utilisateur.statut == 'actif' ? 'success' : 'secondary' }}">{{ utilisateur.statut|capitalize }}</span></td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary me-1" href="{{ path('app_utilisateur_show', {id: utilisateur.id}) }}" title="Voir"><i class="mdi mdi-eye"></i></a>
                                <a class="btn btn-sm btn-outline-warning me-1" href="{{ path('app_utilisateur_edit', {id: utilisateur.id}) }}" title="Modifier"><i class="mdi mdi-pencil"></i></a>
                                <form method="post" action="{{ path('app_utilisateur_delete', {id: utilisateur.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_utilisateur_' ~ utilisateur.id) }}">
                                    <button class="btn btn-sm btn-outline-danger" title="Supprimer"><i class="mdi mdi-trash-can"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" class="text-center text-muted">Aucun utilisateur</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
